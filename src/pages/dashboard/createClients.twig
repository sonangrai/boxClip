{% extends '../../layout/_layoutSidebar.twig' %} {% block title %} Create Client
- Boxclip {% endblock %} {% block javascripts %} {% endblock %} {% block
contents %}

<div class="dashboardHome">
  {% include "./components/_header.twig" %}

  <div class="logForm create">
    <div class="container">
      <div class="creHead">Create New Client</div>

      <div class="oauth">
        <div class="butcons">
          <a href="#!">
            <img src="../../img/login/ggl.png" alt="" />
            <span>Sign Up with Google</span>
          </a>
        </div>
        <div class="butcons">
          <a href="#!">
            <img src="../../img/login/fb.png" alt="" />
            <span>Sign Up with Facebook</span>
          </a>
        </div>
      </div>

      <form action="/pages/dashboard">
        <div class="row">
          <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="formItem">
              <label for="firstName" class="form-label">First Name</label>
              <input type="text" class="form-control" id="firstName" />
            </div>
          </div>
          <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="formItem">
              <label for="lastName" class="form-label">Last Name</label>
              <input type="text" class="form-control" id="lastName" />
            </div>
          </div>

          <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="formItem">
              <label for="address" class="form-label">Address</label>
              <input type="text" class="form-control" id="address" />
            </div>
          </div>
          <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="formItem">
              <label for="country" class="form-label">Country</label>
              <input
                type="text"
                class="form-control"
                id="country"
                aria-describedby="emailHelp"
              />
            </div>
          </div>
          <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="formItem">
              <label for="organization" class="form-label">Organization</label>
              <input type="text" class="form-control" id="organization" />
            </div>
          </div>
          <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="formItem">
              <label for="email" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email" />
            </div>
          </div>
          <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="formItem">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                aria-describedby="emailHelp"
              />
            </div>
          </div>
          <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="formItem">
              <label for="confirmPassword" class="form-label"
                >Confirm Password</label
              >
              <input
                type="password"
                class="form-control"
                id="confirmPassword"
                aria-describedby="emailHelp"
              />
            </div>
          </div>
        </div>
        <div class="formItem form-check">
          <input type="checkbox" class="form-check-input" id="exampleCheck1" />
          <div class="fFlex">
            <label class="form-check-label" for="exampleCheck1"
              >I Agree to the Boxklip Application's
              <a href="">Privacy Policy</a> and
              <a href="">Terms And Conditions.</a></label
            >
          </div>
        </div>
        <button type="submit" class="btn pBtn">Register</button>
      </form>
    </div>
  </div>
</div>

<script>
  (function () {
    //THe delete btn
    let Dbtn = document.createElement("button");
    Dbtn.className = "pDbtn";
    Dbtn.innerHTML = "Delete";

    Dbtn.addEventListener("click", (e) => {
      e.preventDefault();
      gPrev.classList.remove("choosed");
      gPrev.src = "";
    });

    let gPhoto = document.querySelector(".grpPhoto");
    gPhoto.addEventListener("change", (e) => {
      const [file] = e.target.files;
      if (file) {
        gPrev.src = URL.createObjectURL(file);
        gPrev.classList.add("choosed");
        document.querySelector(".groupPhoto").appendChild(Dbtn);
      }
    });
  })();
</script>

{% endblock %}
