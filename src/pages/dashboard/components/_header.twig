<script>
  (function () {
    /**
     *Repsonsive slider
     */
    let ham = document.querySelector(".hamMe");
    let sideBar = document.querySelector(".dashboardPage aside");
    ham.addEventListener("click", () => {
      sideBar.classList.add("slide");
    });

    //For closing
    document.addEventListener("click", function (event) {
      let isClickInside = sideBar.contains(event.target);
      let isClickInside2 = ham.contains(event.target);

      if (!isClickInside && !isClickInside2) {
        //the click was outside the specifiedElement, do something
        sideBar.classList.remove("slide");
      }
    });

    /**
     *Sidebar togg
     */
    let sideTog = document.querySelector(".sideTog");
    sideTog.addEventListener("click", () => {
      sideTog.classList.toggle("sideshow");
      sideBar.parentNode.classList.toggle("openedSide");
    });
    let sideBarTog = document.querySelector(".sidebar .logo .close");
    sideBarTog.addEventListener("click", () => {
      sideTog.classList.toggle("sideshow");
      sideBar.parentNode.classList.toggle("openedSide");
    });
  })();
</script>
