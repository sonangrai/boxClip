<script>
  (function () {
    let togMore = document.querySelector(".moreTog");
    let tenchecks = document.querySelectorAll(".grpFilter .form-check");
    togMore.addEventListener("click", () => {
      togMore.classList.toggle("expand");
      tenchecks.forEach((a, i) => {
        if (i > 10) {
          a.classList.toggle("show");
        }
      });
    });

    window.onload = () => {
      tenchecks.forEach((a, i) => {
        if (i < 11) {
          a.classList.add("show");
        }
      });
    };
  })();
</script>

